            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <execution>
                        <id>purge-local-dependencies</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>purge-local-repository</goal>
                        </goals>
                        <configuration>
                            <actTransitively>false</actTransitively>
                            <include>
                                com.mtbadi39.commons:commons-parent,
                                com.mtbadi39.commons:commons-alert,
                                com.mtbadi39.commons:commons-logging,
                                com.mtbadi39.commons:commons-validator,
                                com.mtbadi39.commons:commons-utils,
                                com.mtbadi39.commons:commons-textfield,
                                com.mtbadi39.commons:commons-table,
                                com.mtbadi39.commons:commons-reports,
                                com.mtbadi39.commons:commons-groupable_table_header,
